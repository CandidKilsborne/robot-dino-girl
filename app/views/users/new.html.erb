<div class="col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 login-content">
  <div id="headline text-center">
    <div class="headline sapphire text-center">Asteria</div>
    <div class="subheadline x-large white text-center">Create Account</div>
    <p class="error medium text-center sapphire"><%= @error %></p>
  </div>
  <div class="login login-box text-center" id="create_account">
    <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.text_field :username, placeholder: "Username" %>
    </div>
    <div class="form-group">
      <%= f.text_field :email, placeholder: "Email" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, placeholder: "Password" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder: "Enter password again" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Account", class: "btn btn-primary" %> <br>
    </div>
    <% end %>
    <!-- <button id="return_login">Back to Login</button> -->
    <%= link_to('Back to Login', '/sessions/new') %>
  </div>
</div>
